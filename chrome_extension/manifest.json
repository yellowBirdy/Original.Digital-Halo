{
  "manifest_version": 2,

  "name":  	 "Digital-Halo",
  "description": "It allows collection of your Digital Halo data",
  "version":     "0.0.2",

  "background": {
    "scripts":    ["send_data.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js":      ["get_data.js"],
      "run_at":  "document_start" 
    } 
  ],

  "browser_action": {
    "default_icon":  "icon-16.png",
    "default_popup": "popup.html",
    "default_title": "See your halo!"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "http://dev.sensible.dtu.dk:9090/"
  ]
}
